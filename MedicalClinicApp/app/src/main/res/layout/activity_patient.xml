<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <Button
        android:layout_marginTop="300dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View My Appointments"
        android:id="@+id/ViewMyAppointments"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="View My Appointments" />

    <Button
        android:id="@+id/ViewMyPastAppointments"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewMyAppointments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="View My Past Appointments"
        android:text="View My Past Appointments" />

    <Button
        android:id="@+id/BookMyAppointments"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewMyPastAppointments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="Book My Appointments"
        android:text="Book My Appointment" />

</RelativeLayout>